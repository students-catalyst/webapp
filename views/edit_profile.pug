extends layout

block cover-main  
  if (message)
    div(class="alert alert-warning alert-dismissible fade show" role="alert")
      span #{message}
      button(type="button" class="close" data-dismiss="alert" aria-label="Close")
        span(aria-hidden="true") &times;
  if (user)
    a(class="btn btn-secondary" href="/member")
      span(class="fa fa-arrow-left") Back to member page
    br
    br
    form(action="/profile/edit" method="post" enctype="multipart/form-data" )
      div(class="row")
        div(class="col-md-1")
        div(class="col-md-3")
          img(src=profPicUrl alt="profile image" onerror="this.src='https://res.cloudinary.com/djpvro5sh/image/upload/v1545989513/profpic/avatar.png'")
        div(class="col-md-7 text-left")        
          h3 Nama Lengkap : 
          input(type="text" value=user.fullname name="fullname")
          h3 Email : #{user.email}
          br
          h3 Upload Foto :
          <input type="file" class="form-control-file" id="exampleFormControlFile1" name="image">          
        div(class="col-md-1")
      br
      button(type="submit" class="btn btn-primary") Save
      

          
